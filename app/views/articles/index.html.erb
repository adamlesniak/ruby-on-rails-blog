<h1>All articles</h1>
<% if @articles.any? %>
  <% @articles.each do |article| %>
    <div class="single-article">
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= article.description %></p>
      <span><%= link_to 'Edit', edit_article_path(article) %></span>
    </div>
  <% end %>
<% end %>